{
  "name": "premiscale",
  "description": "Autoscaling for virtual machines with libvirt",
  "repository": "git@github.com:premiscale/premiscale.git",
  "author": "Emma Doyle <emma@premiscale.com>",
  "license": "Proprietary",
  "private": true,
  "scripts": {
    "install:dependencies": "./scripts/dependencies.sh",
    "install:deps": "yarn install:dependencies",
    "pylint": "./scripts/pylint.sh",
    "develop": "./scripts/develop.sh",
    "clean": "./scripts/clean.sh",
    "freeze": "pip freeze | grep -v \"file:///\" | grep -v \"ssh://\" > \"$(git rev-parse --show-toplevel)\"/requirements.txt",
    "strace": "sudo strace -p \"$(cat /opt/premiscale/premiscale.pid)\"",
    "docker:run": "./scripts/docker/run.sh",
    "helm:dependency:update": "for p in helm/*; do echo \"$p\" && helm dependency update \"$p\"/; done",
    "helm:install:influxdb": "./scripts/helm/influxdb-install.sh",
    "helm:uninstall:influxdb": "helm uninstall influxdb -n platform-develop",
    "helm:install:premiscale": "./scripts/helm/premiscale-install.sh",
    "helm:install:as": "yarn helm:install:premiscale",
    "helm:uninstall:premiscale": "helm uninstall premiscale -n platform-develop",
    "helm:uninstall:as": "yarn helm:uninstall:premiscale",
    "helm:install:mysql": "./scripts/helm/mysql-install.sh",
    "helm:uninstall:mysql": "helm uninstall -n platform-develop mysql",
    "helm:repo:add": "./scripts/helm/repo-add.sh",
    "poetry:lock": "poetry lock",
    "ps": "./scripts/pstree.sh",
    "pst": "./scripts/psthread.sh",
    "test:e2e": "yarn minikube:up && poetry run pytest -vrP src/test/e2e; yarn minikube:delete",
    "test:unit": "poetry run pytest -vrP src/test/unit",
    "test:e2e:test": "./src/test_hook.py",
    "compose:up": "./scripts/docker/compose-up.sh",
    "compose:platform:up": "./scripts/docker/compose-up.sh platform",
    "compose:down": "./scripts/docker/compose-down.sh",
    "minikube:up": "./scripts/minikube.sh start",
    "minikube:down": "./scripts/minikube.sh stop",
    "minikube:delete": "./scripts/minikube.sh delete"
  }
}